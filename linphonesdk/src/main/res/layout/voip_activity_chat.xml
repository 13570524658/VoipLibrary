<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:combtn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424">

    <!--视频通话-->
    <RelativeLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </RelativeLayout>

    <!--语音通话-->
    <RelativeLayout
        android:id="@+id/voip_rl_audio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!--聊天背景，使用头像-->
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:src="@drawable/voip_avatar_default" />

        <!--头像-->
        <ImageView
            android:id="@+id/voip_voice_chat_avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:src="@drawable/voip_avatar_default" />

        <!--好友昵称-->
        <TextView
            android:id="@+id/voice_chat_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voip_voice_chat_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="好友名称"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <!--聊天时间  和呼出呼入状态-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voice_chat_friend_name"
            android:visibility="visible">

            <!--通话状态提示 邀请您进行语音聊天 正在等待对方接受邀请-->
            <TextView
                android:id="@+id/voip_voice_chat_state_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/voice_chat_calling"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="visible" />

            <Chronometer
                android:id="@+id/voip_voice_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/voip_voice_chat_state_tips"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>

    <!--切换到悬浮窗-->
    <Button
        android:id="@+id/narrow_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/voip_reduced" />

    <!--取消，静音，免提 -->
    <LinearLayout
        android:id="@+id/voip_voice_chatting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:visibility="visible">


        <com.trustmobi.mixin.voip.ComButton
            android:id="@+id/voip_chat_mute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            combtn:voip_src="@drawable/voip_btn_voice_mute"
            combtn:voip_text="@string/voice_chat_mute" />

        <com.trustmobi.mixin.voip.ComButton
            android:id="@+id/voip_chat_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            combtn:voip_src="@drawable/voip_btn_voice_cancel"
            combtn:voip_text="@string/voice_chat_refuse_call" />


        <com.trustmobi.mixin.voip.ComButton
            android:id="@+id/voip_chat_hands_free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            combtn:voip_src="@drawable/voip_btn_voice_hand_free"
            combtn:voip_text="@string/voice_chat_hands_free" />


    </LinearLayout>
    <!--接听，挂断-->
    <LinearLayout
        android:id="@+id/voip_chat_incoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.trustmobi.mixin.voip.ComButton
            android:id="@+id/voip_hang_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            combtn:voip_src="@drawable/voip_btn_voice_cancel"
            combtn:voip_text="@string/voice_chat_refuse" />

        <com.trustmobi.mixin.voip.ComButton
            android:id="@+id/voip_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            combtn:voip_src="@drawable/voip_btn_voice_answer"
            combtn:voip_text="@string/voice_chat_answer" />

    </LinearLayout>
</FrameLayout>


